{% extends 'base.html.twig' %}



{% block title %} CFD | Réclamation {% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

<div id="contact">
    <h4>Formulaire de réclamation</h4>
    <p class="indexP">Nous viendrons vers vous dans les plus brefs délais !</p>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.societe, {'label': 'Société*', 'attr' : {'placeholder' : 'Société', 'requiered': 'requiered'}}) }} 
    </div>    
    <div class="form-group">
        {{ form_row(form.telephone, {'label': 'Téléphone', 'attr' : {'placeholder' : 'Téléphone'}}) }}    
    </div>    
    <div class="form-group">
        {{ form_row(form.email, {'label': 'Email*', 'attr' : {'placeholder' : 'Email', 'requiered': 'requiered'}}) }}
    
    </div>    
     
  <div class="form-group">
   <ul>
{% for child in form.Probleme %}
    <li>{{ form_label(child) }} {{ form_widget(child) }}</li>
   
    
{% endfor %}
</ul>

    </div>
      
    <div class="form-group">
        {{ form_row(form.message, {'label': 'Autre', 'attr' : {'placeholder' : 'Notifiez votre réclamation'}}) }}
    </div> 
     <div class="form-group">
        {{ form_row(form.files) }}
    </div> 

    <div class="form-group">
        <button type="submit" class="btn">Envoyer</button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}