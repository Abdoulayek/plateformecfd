{% extends 'base.html.twig' %}



{% block title %} CFD vous Contacte {% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}

<div id="contact">
    <h4>CFD vous contacte !</h4>
   
    {{ form_start(form) }}
      
       <div class="form-group">
        {{ form_row(form.societe, {'label': 'Société*', 'attr' : {'placeholder' : 'Société', 'requiered': 'requiered'}}) }} 
    </div>    
    <div class="form-group">
        {{ form_row(form.telephone, {'label': 'Téléphone', 'attr' : {'placeholder' : 'Téléphone'}}) }}    
    </div> 
    <div class="form-group">
        {{ form_row(form.email, {'label': 'Email*', 'attr' : {'placeholder' : 'Email', 'requiered': 'requiered'}}) }}
    
    </div>    
    <div class="form-group">
        {{ form_row(form.objet, {'label': 'Objet*', 'attr' : {'placeholder' : 'Objet', 'requiered': 'requiered'}}) }}
    </div>     
    <div class="form-group">
        {{ form_row(form.message, {'label': 'Message*', 'attr' : {'placeholder' : 'Message', 'requiered': 'requiered'}}) }}
    </div>    
    <div class="form-group">
        <button type="submit" class="btn">Envoyer</button>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}